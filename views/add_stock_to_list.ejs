<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Stock to Stock List</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
        margin: 0;
        padding: 0;
      }
      .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
      }
      h1 {
        text-align: center;
        margin: 20px 0;
        color: #343a40;
      }
      form {
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      label,
      select,
      input,
      button {
        margin: 10px 0;
        padding: 10px;
        width: 80%;
      }
      select,
      input {
        border-radius: 4px;
        border: 1px solid #ddd;
      }
      button {
        background-color: #4caf50;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 4px;
      }
      button:hover {
        background-color: #45a049;
      }
      .notification {
        background-color: #4caf50;
        color: white;
        padding: 15px;
        text-align: center;
        border-radius: 5px;
        margin-bottom: 20px;
        display: none;
      }
      .error {
        background-color: #f44336;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Add Stock to Stock List: <%= listName %></h1>
      <% if (error) { %>
      <div class="notification error"><%= error %></div>
      <% } %>
      <form action="/add_stock_to_list/<%= listName %>" method="POST">
        <label for="code">Stock Code:</label>
        <select name="code" id="code" required>
          <% availableStocks.forEach(stock => { %>
          <option value="<%= stock.code %>"><%= stock.code %></option>
          <% }) %>
        </select>

        <label for="shares">Shares:</label>
        <input type="number" name="shares" id="shares" min="1" required />

        <button type="submit">Add Stock</button>
      </form>
      <a href="/dashboard">Back to Dashboard</a>
    </div>
  </body>
</html>
