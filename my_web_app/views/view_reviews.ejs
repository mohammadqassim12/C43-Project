<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Reviews for <%= listName %></title>
</head>
<body>
    <h1>Reviews for <%= listName %></h1>
    <% reviews.forEach(review => { %>
        <div>
            <p><strong><%= review.name %>:</strong> <%= review.text %></p>
            <% if (review.userid === locals.userID || locals.userID === locals.listOwner) { %>
                <form method="post" action="/delete_review">
                    <input type="hidden" name="reviewID" value="<%= review.reviewid %>">
                    <input type="hidden" name="listName" value="<%= listName %>">
                    <button type="submit">Delete</button>
                </form>
            <% } %>
            <% if (review.userid === locals.userID) { %>
                <a href="/edit_review/<%= review.reviewid %>">Edit</a>
            <% } %>
        </div>
    <% }); %>
    <a href="/dashboard">Back to Dashboard</a>
</body>
</html>