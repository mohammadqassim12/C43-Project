<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Portfolios</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #4CAF50;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
            color: #555;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        a {
            color: #4CAF50;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        .btn {
            display: inline-block;
            padding: 8px 16px;
            margin: 4px 2px;
            border-radius: 4px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
        }
        .btn:hover {
            background-color: #45a049;
        }
        .btn:active {
            background-color: #3e8e41;
        }
        .stock-list a {
            display: inline-block;
            padding: 5px 10px;
            margin: 2px 0;
            background-color: #4CAF50;
            color: white;
            border-radius: 3px;
            text-decoration: none;
        }
        .stock-list a:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Your Portfolios</h1>
        <table>
            <thead>
                <tr>
                    <th>Portfolio ID</th>
                    <th>Balance</th>
                    <th>Stock Lists</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% portfolios.forEach(portfolio => { %>
                    <tr>
                        <td><%= portfolio.portfolioid %></td>
                        <td>$<%= portfolio.cashamount.toFixed(2) %></td>
                        <td>
                            <ul class="stock-list">
                                <% portfolio.stockLists.forEach(stockList => { %>
                                    <li><a href="/view_stock_list/<%= stockList.listname %>"><%= stockList.listname %></a></li>
                                <% }) %>
                            </ul>
                        </td>
                        <td>
                            <a class="btn" href="/deposit/<%= portfolio.portfolioid %>">Deposit</a>
                            <a class="btn" href="/withdraw/<%= portfolio.portfolioid %>">Withdraw</a>
                            <a class="btn" href="/buy_stock/<%= portfolio.portfolioid %>">Buy Stock</a>
                            <a class="btn" href="/sell_stock/<%= portfolio.portfolioid %>">Sell Stock</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a class="btn" href="/dashboard">Back to Dashboard</a>
    </div>
</body>
</html>
