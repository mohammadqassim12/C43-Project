<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Portfolios</title>
</head>
<body>
    <h1>Your Portfolios</h1>
    <table>
        <thead>
            <tr>
                <th>Portfolio ID</th>
                <th>Balance</th>
                <th>Stock Lists</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% portfolios.forEach(portfolio => { %>
                <tr>
                    <td><%= portfolio.portfolioid %></td>
                    <td><%= portfolio.cashamount %></td>
                    <td>
                        <ul>
                            <% portfolio.stockLists.forEach(stockList => { %>
                                <li><a href="/view_stock_list/<%= stockList.listname %>"><%= stockList.listname %></a></li>
                            <% }) %>
                        </ul>
                    </td>
                    <td>
                        <a href="/deposit/<%= portfolio.portfolioid %>">Deposit</a>
                        <a href="/withdraw/<%= portfolio.portfolioid %>">Withdraw</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <a href="/dashboard">Back to Dashboard</a>
</body>
</html>
