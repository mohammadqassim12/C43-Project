<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Stock List: <%= listName %></title>
</head>
<body>
    <h1>Stock List: <%= listName %></h1>
    <table>
        <thead>
            <tr>
                <th>Stock Code</th>
                <th>Timestamp</th>
                <th>Shares</th>
                <th>Open</th>
                <th>High</th>
                <th>Low</th>
                <th>Close</th>
                <th>Volume</th>
                <th>Coefficient of Variation</th>
                <th>Beta</th>
            </tr>
        </thead>
        <tbody>
            <% stocks.forEach(stock => { %>
                <tr>
                    <td><%= stock.code %></td>
                    <td><%= new Date(stock.timestamp).toDateString() %></td>
                    <td><%= stock.shares %></td>
                    <td><%= stock.open %></td>
                    <td><%= stock.high %></td>
                    <td><%= stock.low %></td>
                    <td><%= stock.close %></td>
                    <td><%= stock.volume %></td>
                    <% 
                        const cvBeta = cvBetaData.find(cb => cb.code === stock.code);
                    %>
                    <td><%= cvBeta ? (cvBeta.coefficient_of_variation !== null ? cvBeta.coefficient_of_variation.toFixed(2) : 'N/A') : 'N/A' %></td>
                    <td><%= cvBeta ? (cvBeta.beta !== null ? cvBeta.beta.toFixed(2) : 'N/A') : 'N/A' %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    <h2>Portfolio Statistics</h2>
    
    <h3>Covariance Matrix</h3>
    <table>
        <thead>
            <tr>
                <th>Stock Code 1</th>
                <th>Stock Code 2</th>
                <th>Covariance</th>
            </tr>
        </thead>
        <tbody>
            <% covarianceData.forEach(data => { %>
                <tr>
                    <td><%= data.code1 %></td>
                    <td><%= data.code2 %></td>
                    <td><%= data.covariance !== null ? data.covariance.toFixed(2) : 'N/A' %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h3>Correlation Matrix</h3>
    <table>
        <thead>
            <tr>
                <th>Stock Code 1</th>
                <th>Stock Code 2</th>
                <th>Correlation</th>
            </tr>
        </thead>
        <tbody>
            <% correlationData.forEach(data => { %>
                <tr>
                    <td><%= data.code1 %></td>
                    <td><%= data.code2 %></td>
                    <td><%= data.correlation !== null ? data.correlation.toFixed(2) : 'N/A' %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <a href="/view_all_stock_lists">Back to Stock Lists</a>
</body>
</html>
